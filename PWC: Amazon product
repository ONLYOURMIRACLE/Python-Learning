import requests
def getHTMLText(url):
    try:
        kv = {'user-agent':'mozilla/5.0'}
        r = requests.get(url, timeout=30, headers=kv)
        r.raise_for_status()
        r.encoding=r.apparent_encoding
        return r.text[:1000]
    except:
        return 'Error'
url = 'https://www.amazon.cn/gp/product/b01m8l5z3y'
print(getHTMLText(url))
